{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@frontend/*": ["frontend/*"],
      "@backend/*": ["backend/*"],
      "@graphql": ["graphql"],
      "@graphql/*": ["graphql/*"],
      "@utils": ["utils.ts"],
      "@constants": ["constants.ts"]
    },
    "strict": true,
    "experimentalDecorators": true
  },
  "extends": "tsconfig/nextjs.json",
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
